# JWT Secret Key (generate: python -c "import secrets; print(secrets.token_urlsafe(32))")
SECRET_KEY=your-secret-key-here

# JWT Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Database
DATABASE_URL=sqlite:///./workhub.db

# CORS â€“ Regex Pattern (more flexible for development)
# Default: https?://(localhost|.*\.github\.dev)
# Local development: https?://localhost(:[0-9]+)?
# Production: https?://(api\.example\.com|app\.example\.com)
CORS_PATTERN=https?://(localhost|.*\.github\.dev)

# Rate Limiting (requests/minute)
RATE_LIMIT=100/minute

# SSO (PHP Portal)
SSO_ISSUER=php-portal
SSO_AUDIENCE=workhub-support
SSO_ALGORITHM=HS256
SSO_SECRET=your-shared-sso-secret
