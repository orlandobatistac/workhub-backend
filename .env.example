# =============================================================================
# SEGURIDAD
# =============================================================================
# JWT Secret Key (genera una: python -c "import secrets; print(secrets.token_urlsafe(32))")
SECRET_KEY=your-secret-key-here

# JWT Configuration
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# =============================================================================
# BASE DE DATOS - MariaDB/MySQL
# =============================================================================
# Host de la base de datos
DB_HOST=localhost

# Puerto de MariaDB (por defecto 3306)
DB_PORT=3306

# Usuario de la base de datos
DB_USER=workhub

# Contraseña del usuario
DB_PASSWORD=workhub_password

# Nombre de la base de datos
DB_NAME=workhub

# Usar SQLite en lugar de MariaDB (para desarrollo/testing)
# USE_SQLITE=false

# =============================================================================
# CORS
# =============================================================================
# Orígenes permitidos (separados por coma)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://localhost:5000

# CORS – Regex Pattern (más flexible para desarrollo)
# Default: https?://(localhost|.*\.github\.dev)
# Local development: https?://localhost(:[0-9]+)?
# Production: https?://(api\.example\.com|app\.example\.com)
CORS_PATTERN=https?://(localhost|.*\.github\.dev)

# =============================================================================
# RATE LIMITING
# =============================================================================
# Rate Limiting (requests/minute)
RATE_LIMIT=100/minute

# =============================================================================
# SSO (Single Sign-On) - Opcional
# =============================================================================
# SSO (PHP Portal)
SSO_ISSUER=php-portal
SSO_AUDIENCE=workhub-support
SSO_ALGORITHM=HS256
SSO_SECRET=your-shared-sso-secret

# =============================================================================
# DESARROLLO
# =============================================================================
# Habilitar token de prueba (SOLO PARA DESARROLLO)
ENABLE_TEST_TOKEN=false
